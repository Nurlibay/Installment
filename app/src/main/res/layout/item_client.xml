<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/item_background"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/margin_12"
        android:paddingHorizontal="@dimen/margin_24">
        <TextView
            android:id="@+id/tv_client_fullname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:text="Алибек Ембергенов"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_client_fullname"
            app:layout_constraintStart_toStartOf="@id/tv_client_fullname"
            android:layout_width="wrap_content"
            android:text="iPhone 12 Pro Max"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"/>
        <TextView
            android:id="@+id/tv_paid_title"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            app:layout_constraintStart_toStartOf="@id/tv_client_fullname"
            android:layout_width="wrap_content"
            android:text="Оплачено / Осталось :"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"/>
        <TextView
            android:id="@+id/tv_duration_title"
            app:layout_constraintTop_toBottomOf="@id/tv_paid_title"
            app:layout_constraintStart_toStartOf="@id/tv_client_fullname"
            android:layout_width="wrap_content"
            android:text="Время :"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            />
        <TextView
            android:id="@+id/tv_product_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_product_name"
            android:layout_width="wrap_content"
            android:text="1200$"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_paid_sum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_paid_title"
            android:layout_width="wrap_content"
            android:text="400 / 800$"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_duration_title"
            android:layout_width="wrap_content"
            android:text="6 месяцев"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>