<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="uz.texnopos.installment.ui.orders.OrdersFragment"
        android:label="fragment_clients"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_clientsFragment_to_fragmentClient"
            app:destination="@id/fragmentClient"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            />
        <action
            android:id="@+id/action_clientsFragment_to_fragmentAddClient"
            app:destination="@id/fragmentAddClient"
            />
        <action
            android:id="@+id/action_clientsFragment_to_fragmentPayment"
            app:destination="@id/fragmentPayment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentClient"
        android:name="uz.texnopos.installment.ui.client.FragmentClient"
        android:label="FragmentAddClient"
        tools:layout="@layout/fragment_client"/>
    <fragment
        android:id="@+id/fragmentAddClient"
        android:name="uz.texnopos.installment.ui.addClient.FragmentAddClient"
        android:label="FragmentAddClient"
        tools:layout="@layout/fragment_add_client"/>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="uz.texnopos.installment.ui.login.FragmentLogin"
        android:label="FragmentLogin"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragmentLogin_to_clientsFragment"
            app:destination="@id/ordersFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/fragmentPayment"
        android:name="uz.texnopos.installment.ui.payment.FragmentPayment"
        android:label="FragmentPayment"
        tools:layout="@layout/fragment_payment"/>

</navigation>