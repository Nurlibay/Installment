<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="uz.texnopos.installment.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_clientsFragment"
            app:destination="@id/clientsFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"
            />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="uz.texnopos.installment.ui.main.orders.OrdersFragment"
        android:label="ClientFragment"
        tools:layout="@layout/fragment_orders"
        >
        <action
            android:id="@+id/action_clientFragment_to_clientTransactionsFragment"
            app:destination="@id/transactionsFragment" />
        <action
            android:id="@+id/action_ordersFragment_to_fragmentAddOrder"
            app:destination="@id/fragmentAddOrder" />
    </fragment>

    <dialog
        android:id="@+id/paymentFragment"
        android:name="uz.texnopos.installment.ui.main.payment.PaymentDialog"
        android:label="PaymentFragment"
        tools:layout="@layout/fragment_payment"
        />
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="uz.texnopos.installment.ui.main.transactions.TransactionsFragment"
        android:label="ClientTransactionsFragment"
        tools:layout="@layout/fragment_transactions"
        >
        <action
            android:id="@+id/action_clientTransactionsFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientsFragment"
        android:name="uz.texnopos.installment.ui.main.clients.ClientsFragment"
        android:label="fragment_clients"
        tools:layout="@layout/fragment_clients" >
        <action
            android:id="@+id/action_clientsFragment_to_clientFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_clientsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"
            />
        <action
            android:id="@+id/action_clientsFragment_to_fragmentCloudMessaging"
            app:destination="@id/fragmentCloudMessaging" />
        <action
            android:id="@+id/action_clientsFragment_to_addClientFragment"
            app:destination="@id/addClientFragment2" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCloudMessaging"
        android:name="uz.texnopos.installment.firebase.cloudMessaging.FragmentCloudMessaging"
        android:label="FragmentCloudMessaging" />
    <fragment
        android:id="@+id/addClientFragment2"
        android:name="uz.texnopos.installment.ui.main.addclient.AddClientFragment"
        android:label="AddClientFragment"
        tools:layout="@layout/fragment_add_client"/>
    <dialog
        android:id="@+id/fragmentAddOrder"
        android:name="uz.texnopos.installment.ui.main.addOrder.DialogAddOrder"
        android:label="FragmentAddOrder" />

</navigation>