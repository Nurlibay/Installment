<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="uz.texnopos.installment.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"
            android:id="@+id/action_loginFragment_to_clientsFragment"
            app:destination="@id/clientsFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientFragment"
        android:name="uz.texnopos.installment.ui.main.client.orders.ClientOrdersFragment"
        android:label="ClientFragment"
        tools:layout="@layout/fragment_client_orders"
        >
        <action
            android:id="@+id/action_clientFragment_to_clientTransactionsFragment"
            app:destination="@id/clientTransactionsFragment" />
    </fragment>

    <dialog
        android:id="@+id/paymentFragment"
        android:name="uz.texnopos.installment.ui.main.payment.PaymentDialog"
        android:label="PaymentFragment"
        tools:layout="@layout/fragment_payment"
        />
    <fragment
        android:id="@+id/clientTransactionsFragment"
        android:name="uz.texnopos.installment.ui.main.client.transactions.ClientTransactionsFragment"
        android:label="ClientTransactionsFragment"
        tools:layout="@layout/fragment_client_transactions"
        >
        <action
            android:id="@+id/action_clientTransactionsFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientsFragment"
        android:name="uz.texnopos.installment.ui.main.clients.ClientsFragment"
        android:label="fragment_clients"
        tools:layout="@layout/fragment_clients" >
        <action
            android:id="@+id/action_clientsFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
    </fragment>

</navigation>